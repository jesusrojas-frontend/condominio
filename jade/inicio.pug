
head
  link(rel="stylesheet", href="css/estilos-inicio.css")
  title Condominio Margarita
.inicio
  .contenedor
    ul.menu(role="tablist")#myTabs
      li(role="presentation")
        a(href="/#!/inicio/#home",role="tab",data-toggle="tab",id="home-tab") Estados de Cuenta
      li(role="presentation", class="")
        a(href="/#!/inicio/#inmueble",role="tab",data-toggle="tab",id="inmueble-tab") Estado de Cuenta Inmueble
    ul.menu(role="tablist")
      li(role="presentation")
        a(href="/#!/inicio/#ingresosMes",role="tab",data-toggle="tab",id="ingresosMes-tab") Ingresos del mes
      li(role="presentation")
        a(href="/#!/inicio/#cuotasEspeciales",role="tab",data-toggle="tab",id="cuotasEspeciales-tab") Cuotas especiales
  .container
    .tab-content
      .table-responsive(role="tabpanel" class="tab-pane fade in active" id="home")
        table.table.table-hover
          h2 Estados de Cuenta
          <thead>
            <tr>
              th Casa
              th Nombre
              th Deuda
              th Interes
              th Mes
              th Total
            </tr>
          </thead>
          <tbody>
            tr(ng-repeat="cuenta in cuentas | orderBy:'contanido.casa':false")
              td {{cuenta.contenido.casa}}
              td {{cuenta.contenido.nombre}}
              td {{cuenta.contenido.deuda}} Bsf
              td {{cuenta.contenido.interes}} Bsf
              td {{cuenta.contenido.mes}} Bsf
              td {{cuenta.contenido.total}} Bsf
          </tbody>
      .table-responsive(role="tabpanel" class="tab-pane fade" id="inmueble")
        div
          img(ng-src="{{inmuelbe.contenido.url}}", alt="inmueble")
      .table-responsive(role="tabpanel" class="tab-pane fade" id="ingresosMes")
        img(ng-src="{{cuotaEspecial.contenido.url}}", alt="Cuota Especial")
      .table-responsive(role="tabpanel" class="tab-pane fade" id="cuotasEspeciales")
        img(ng-src="{{ingrersosMes.contenido.url}}", alt="Ingresos del mes")
    //- img(src="img/pagina logeada.png", alt="" width="100%")
  script(src="js/jquery.min.js")
  script(src="js/mycarousel.js")
  
